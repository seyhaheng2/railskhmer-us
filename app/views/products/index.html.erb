<div class="sub-menu">
  <div class="sub-title">
    <h3>List Product</h3>
  </div>
</div>
<div class="content-pro">
<table>
  <thead>
    <tr >
      <th>Name</th>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td style="width:180px;"><%= truncate(product.name, length: 22)%></td>
        <td><%= image_tag (product.image), size: "50" %></td>
        <td><%= truncate(product.description, length: 130) %></td>
        <td><%= link_to '<i class="fa fa-edit fa-2x" style="color:#0BA59A;font-size:23px;"></i>'.html_safe, edit_product_path(product) %></td>
        <td><%= link_to '<i class="fa fa-bitbucket fa-2x" style="color:#F5595E;font-size:23px;"></i>'.html_safe, product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Product',new_product_path,class: "button tiny success",style:"margin-bottom:0px;margin-top:0px;background:#0BA59A;border-radius:2px;" %>
</div>    