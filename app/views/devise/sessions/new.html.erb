<div class="sub-menu">
	<div class="sub-title"><h3>Not yet have an account? / Login form</h3></div>
</div>
<%= render "layouts/msg" %>

<div class="content-login">
<div class="large-6 columns">
<fieldset style="margin-top:50px;background:#fff;">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="large-12 small-12 medium-12 columns">
    <div class="large-3 columns small-3 medium-3">
      <%= f.label :username, class: "right inline" %>
    </div>
    <div class="large-9 small-9 medium-9 columns" style="padding:0px;">
      <%= f.text_field :username, autofocus: true, class: "" %>
    </div>
  </div>
  <div class="large-12 small-12 medium-12 columns">
    <div class="large-3 columns small-3 medium-3">
      <%= f.label :email, class: "right inline" %>
    </div>
    <div class="large-9 small-9 medium-9 columns" style="padding:0px;">
      <%= f.email_field :email, autofocus: true, class: "" %>
    </div> 
  </div>
  <div class="large-12 small-12 medium-12 columns">
    <div class="large-3 columns medium-3 small-3">
      <%= f.label :password, class: "right inline" %>
    </div>
    <div class="large-9 small-9 medium-9 columns" style="padding:0px;">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>
  <div class="large-12 small-12 medium-12 columns">
    <div class="large-3 columns medium-3 small-3">
      <%= f.label :Retype, class: "right inline" %>
    </div>
    <div class="large-9 small-9 medium-9 columns" style="padding:0px;">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>
  <div class="large-12 small-12 medium-12 columns">
    <div class="large-3 columns medium-3 small-3"></div>
    <div class="large-9 small-9 medium-9 columns" style="padding:0px;">
      <%= f.submit "Sign up",class: "success tiny button expand", style:"margin-bottom:0px;background:#0BA59A;border-radius:2px;"  %></div>
      </div>
<% end %>
</fieldset>
</div>



<div class="large-5 medium-8 large-centered medium-centered columns" style="height:300px;">
<fieldset style="margin-top:50px;background:#fff;">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="login-form">
	<div class="my-input">
  		<%= f.email_field :email, autofocus: true, placeholder: "Your Email" %>
  	</div>
  	<div class="my-input">
  		<%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
  	</div>
  	<% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %>
         <%= link_to "Forgot your password?", new_password_path(resource_name), style: "font-size:12px;float:right;margin-top:4px;color:#0BA59A;" %>
    </div>
  <% end -%> 
  	<div class="my-btn">
  <%= f.submit "Sign in",class: "success tiny button expand", style:"margin-bottom:0px;background:#0BA59A;border-radius:2px;"%>
  <div class="botton-form"><%= link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook),class: "button tiny success expand", style:"margin-bottom:0px;margin-top:8px;background:#43619d;border-radius:2px; "%></div>
  </div> 

</div>	

</div>
<% end %>
</fieldset>

</div>
</div>





